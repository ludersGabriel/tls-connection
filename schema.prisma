// database
datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres@localhost:5432/pokemon"
}

// generator
generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = 2
}

model Pokedex {
    trainer  String    @unique
    pokemons Pokemon[]
}

// data models
model Pokemon {
    id             Int      @id
    name           String   @unique
    type           String[]
    Pokedex        Pokedex? @relation(fields: [pokedexTrainer], references: [trainer])
    pokedexTrainer String?
}
